{
  "$id": "https://github.com/StreamlineData/catalog/blob/master/catalog-rest-service/src/main/resources/json/schema/entity/feed/thread.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Feed entity",
  "description": "Entity that represents a feed",
  "type": "object",

  "definitions": {
    "post": {
      "javaType": "org.openmetadata.catalog.type.Post",
      "type": "object",
      "description": "Post within a feed",
      "properties": {
        "message": {
          "description": "Message in the post",
          "type": "string"
        },
        "postTs": {
          "description": "Timestamp of the post",
          "type": "string",
          "format": "date-time"
        },
        "from": {
          "description": "ID of User (regular user or bot) posting the message",
          "$ref": "../../type/common.json#/definitions/uuid"
        }
      },
      "required": ["message", "from"]
    }
  },
  "properties": {
    "id": {
      "description": "Unique identifier that identifies an entity instance",
      "$ref": "../../type/common.json#/definitions/uuid"
    },
    "href": {
      "description": "Link to the resource corresponding to this entity",
      "$ref": "../../type/common.json#/definitions/href"
    },
    "threadTs": {
      "description": "Timestamp of the when the first post created the thread",
      "format": "date-time"
    },
    "toEntity": {
      "description": "Entity for which this thread is created",
      "$ref": "../../type/common.json#/definitions/entityReference"
    },
    "posts": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/post"
      }
    }
  },
  "required": ["id", "toEntity", "posts"]
}